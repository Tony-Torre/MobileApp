<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Login"
             Title="Login">
    <VerticalStackLayout>
        <Label
            Text="Inserisci l'id"
            HorizontalOptions="Center"
            />
        <Entry 
            Text="Ciccio"
            x:Name="username"
            WidthRequest="300"
            HeightRequest="40"
            />
        <Label
            Text="Inserisci la password"
            HorizontalOptions="Center"
            />
        <Entry 
            x:Name="password"
            WidthRequest="300"
            HeightRequest="40"  
            />
        
        <Button 
            Text="Login" 
            Clicked="Button_Clicked"
            Margin="30"
            WidthRequest="200"
            HeightRequest="40"
            />
        <Label 
            x:Name="error"
            HorizontalOptions="Center"
            TextColor="Red"
            />
    </VerticalStackLayout>
</ContentPage>